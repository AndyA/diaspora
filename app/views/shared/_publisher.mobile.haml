#publisher
  = form_for StatusMessage.new, :remote => true do |status|
    = status.text_area :message, :value => params[:prefill]

    - for aspect_id in @aspect_ids
      = hidden_field_tag 'aspect_ids[]', aspect_id.to_s

    %fieldset{:class => 'ui-grid-a'}
      - if aspect == :all
        %div{:class => 'ui-block-a'}

          .public_toggle
            = status.check_box( :public, {}, true, false )
            = status.label :public, 'public' #t('.make_public')

      %div{:class => 'ui-block-a'}
        - if aspect == :all
          = status.submit t('.share'), :title => t('.share_with_all')
        - else
          = status.submit t('.share'), :title => t('.share_with', :aspect => aspect)

