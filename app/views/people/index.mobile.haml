- content_for :page_title do
  = t('search')

- unless params[:q].blank?
  %h2#search_title
    =t('.results_for')
    %span.term
      = params[:q]

- if @hashes.empty?
  %p
    =t('.no_one_found')

- else
  #people_stream.stream
    - for hash in @hashes
      = render :partial => 'people/person', :locals => hash.merge(:search => !params[:q].blank?)

  = will_paginate @people

